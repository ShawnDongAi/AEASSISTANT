<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 没有焦点时的背景图片 -->
    <item android:drawable="@drawable/spinner_disabled" android:state_window_focused="false"></item>
    <!-- 触摸模式下单击时的背景图片 -->
    <item android:drawable="@drawable/spinner_pressed" android:state_focused="false" android:state_pressed="true"></item>
    <!-- 选中时的图片背景 -->
    <item android:drawable="@drawable/spinner_focused" android:state_selected="true"></item>

</selector>