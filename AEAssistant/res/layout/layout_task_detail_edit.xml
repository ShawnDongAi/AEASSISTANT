<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/task_process_content"
        style="@style/base_edit_text"
        android:gravity="left|top"
        android:hint="@string/hint_task_process_content"
        android:maxLength="3000"
        android:minLines="5"
        android:singleLine="false" />

    <com.zzn.aeassistant.view.FastenGridView
        android:id="@+id/task_process_attach_list"
        style="@style/base_attach_grid"
        android:layoutDirection="rtl" />

</LinearLayout>