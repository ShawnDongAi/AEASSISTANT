<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/input_bg_round"
        android:padding="7dp" >

        <com.zzn.aeassistant.view.pla.STGVImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/icon_loading" />

        <com.zzn.aeassistant.view.squareprogressbar.SquareProgressView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail"
            android:layout_alignLeft="@+id/thumbnail"
            android:layout_alignRight="@+id/thumbnail"
            android:layout_alignTop="@+id/thumbnail" />

        <ImageView
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/project"
            android:layout_alignTop="@+id/project"
            android:layout_below="@+id/thumbnail"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_warning" />

        <TextView
            android:id="@+id/project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/normal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project"
            android:drawableLeft="@drawable/ic_location_small"
            android:gravity="center_vertical"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/address"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical|right"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/root"
            android:gravity="right"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>