<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" xmlns:app="http://schemas.android.com/apk/res/com.zzn.aeassistant">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_launcher" />
	<RelativeLayout
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="vertical" >
	    <TextView
	        android:id="@+id/notify_pro_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="@string/apk_downloading"
	        android:textSize="15sp" />
	    <TextView
	        android:id="@+id/notify_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignBottom="@+id/notify_pro_txt"
	        android:textSize="12sp" />
	    <com.zzn.aeassistant.view.numberpro.NumberProgressBar
	        android:id="@+id/notify_pro_bar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/notify_pro_txt"
	        app:progress_max="100"
	        app:progress_current="0"
	        app:progress_unreached_color="#CCCCCC"
	        app:progress_reached_color="#3498DB"
	        app:progress_text_size="12sp"
	        app:progress_text_color="#3498DB"
	        app:progress_reached_bar_height="1.5dp"
	        app:progress_unreached_bar_height="1dp" />
	</RelativeLayout>
</LinearLayout>
