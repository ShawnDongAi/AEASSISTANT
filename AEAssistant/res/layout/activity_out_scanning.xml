<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layout_bg" >

    <include layout="@layout/top_bar" />

    <RelativeLayout style="@style/layout_body" >

        <com.zzn.aeassistant.view.swipemenu.SwipeMenuListView
            android:id="@+id/user_history"
            style="@style/base_list"
            android:layout_below="@+id/current_project" />

        <TextView
            android:id="@+id/current_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gainsboro"
            android:drawableLeft="@drawable/ic_warning_red"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_down"
            android:padding="10dp"
            android:text="@string/null_project"
            android:textColor="@color/theme_green"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>