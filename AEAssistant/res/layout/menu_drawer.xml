<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/index_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_top"
        android:orientation="horizontal"
        android:padding="10dp" >

        <com.zzn.aeassistant.view.CircleImageView
            android:id="@+id/index_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_head"
            app:border_color="@color/theme_green"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/index_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/index_head"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/index_head"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@drawable/text_normal"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gainsboro" />

    <ListView
        android:id="@+id/index_menu_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" />

</LinearLayout>