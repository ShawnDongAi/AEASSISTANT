        <activity
            android:name=".activity.project.ProjectDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ae_theme_translucent" />
        <!-- 组织架构页 -->
        <activity
            android:name=".activity.project.ProjectStructureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ae_theme_translucent" />
